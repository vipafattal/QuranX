<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/surah_view_root"
        android:layout_width="@dimen/drawar_width"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        tools:theme="@style/AppTheme">

    <com.google.android.material.card.MaterialCardView
            android:layout_margin="12dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="8dp"
            tools:cardBackgroundColor="@color/colorAccentLight"
            android:id="@+id/library_item_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:minHeight="55dp"
            android:padding="8dp">

        <TextView
                android:layout_marginStart="12dp"
                android:id="@+id/surahNumber"
                style="@style/AppTheme.Text.Body2"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_semibold"
                app:layout_constraintBaseline_toBaselineOf="@+id/surahName"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="001" />

        <TextView
                android:id="@+id/surahName"
                style="@style/AppTheme.Text.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/surahNumber"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Al-Fatiha" />
    </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</FrameLayout>
