<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

    <androidx.cardview.widget.CardView
            android:id="@+id/tajweed_rule_color"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:cardCornerRadius="9dp"
            app:cardElevation="0dp"
            tools:cardBackgroundColor="@color/teal_200" />

    <TextView
            android:fontFamily="@font/kitab_bold"
            android:id="@+id/tajweed_verse_part"
            style="@style/QuranicText"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            tools:text="Ø£" />

    <TextView
            android:textSize="20sp"
            android:fontFamily="@font/kitab_bold"
            android:id="@+id/tajweed_rule_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"
            tools:text="@string/about" />
</LinearLayout>