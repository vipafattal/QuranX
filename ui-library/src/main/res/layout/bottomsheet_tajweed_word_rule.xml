<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:minHeight="180dp"
        android:orientation="vertical"
        android:background="@color/appBackgroundColor"
        app:behavior_hideable="true"
        tools:theme="@style/AppTheme"
        app:cardCornerRadius="0dp"
        app:layout_behavior="@string/bottom_sheet_behavior">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="12dp">

            <com.google.android.material.card.MaterialCardView
                    android:id="@+id/close_image"
                    android:layout_gravity="end"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardBackgroundColor="@color/appBackgroundColor"
                    app:cardCornerRadius="15dp"
                    app:layout_constraintBottom_toBottomOf="@+id/textView4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textView4"
                    app:strokeColor="@color/colorSecondaryItems"
                    app:strokeWidth="1dp">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"
                    app:srcCompat="@drawable/ic_close"
                    app:tint="@color/textColor" />
            </com.google.android.material.card.MaterialCardView>

        <TextView
                android:id="@+id/tajweed_word"
                android:paddingVertical="16dp"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/_30ssp"
                style="@style/QuranicText"
                android:fontFamily="@font/kitab_bold"
                tools:text="الله نور"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/tajweedColorsRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                tools:listitem="@layout/item_tajweed_word_rules" />

        <com.google.android.material.card.MaterialCardView
                app:cardElevation="0dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/appBackgroundColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        <TextView
                android:paddingVertical="8dp"
                android:paddingHorizontal="14dp"
                android:id="@+id/tajweed_aya_text"
                style="@style/QuranicText"
                android:layout_width="match_parent"
                android:scrollbars="vertical"
                android:layout_height="wrap_content"
                tools:text="بِسْمِ ٱللَّهِ ٱلرَّحْمَـٰنِ ٱلرَّحِيمِ" />
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>


</FrameLayout>
