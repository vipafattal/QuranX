<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center|bottom"
    android:minHeight="180dp"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:cardCornerRadius="0dp"
    app:layout_behavior="@string/bottom_sheet_behavior"
    tools:theme="@style/AppTheme">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/close_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            app:cardBackgroundColor="@color/appBackgroundColor"
            app:cardCornerRadius="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView4"
            app:strokeColor="@color/colorSecondaryItems"
            app:strokeWidth="1dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="4dp"
                app:srcCompat="@drawable/ic_close"
                app:tint="@color/textColor" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tajweed_word"
            style="@style/QuranicText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/kitab_bold"
            android:paddingVertical="16dp"
            android:textSize="@dimen/_30ssp"
            tools:text="الله نور" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            app:cardBackgroundColor="@color/colorNotes"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <TextView
                style="@style/AppTheme.Text.Body2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawablePadding="12dp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:text="@string/notes_mudud_rules_issue"
                android:textColor="@color/colorAccent"
                app:drawableStartCompat="@drawable/ic_info_filled"
                app:drawableTint="@color/colorAccent"
                tools:drawableStart="@drawable/ic_info_filled"
                tools:drawableTint="@color/colorAccent" />
        </com.google.android.material.card.MaterialCardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tajweedColorsRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:listitem="@layout/item_tajweed_word_rules" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/appBackgroundColor"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <TextView
                android:id="@+id/tajweed_aya_text"
                style="@style/QuranicText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="14dp"
                android:paddingVertical="8dp"
                android:scrollbars="vertical"
                tools:text="بِسْمِ ٱللَّهِ ٱلرَّحْمَـٰنِ ٱلرَّحِيمِ" />
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>


</FrameLayout>
