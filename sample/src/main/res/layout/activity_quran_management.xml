<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="12dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".core.QuranManagementActivity">

    <TextView
        style="@style/TextAppearance.MaterialComponents.Body1"
        android:text="@string/pick_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <Spinner
        android:id="@+id/languages_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        style="@style/TextAppearance.MaterialComponents.Body1"
        android:text="@string/pick_edition_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <Spinner
        android:id="@+id/edition_type_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        style="@style/TextAppearance.MaterialComponents.Body1"
        android:text="@string/pick_edition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <Spinner
        android:id="@+id/edition_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:layout_marginTop="12dp"
        android:id="@+id/download_edition_button"
        android:enabled="false"
        android:layout_gravity="center_horizontal"
        android:text="@string/download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        style="@style/TextAppearance.MaterialComponents.Headline6"
        android:layout_marginVertical="48dp"
        android:layout_gravity="center"
        tools:text="Loading..."
        android:id="@+id/state_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>