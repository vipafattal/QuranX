<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:layout_marginBottom="8dp"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/tajweed_rule_color"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:cardCornerRadius="9dp"
        app:cardElevation="0dp"
        tools:cardBackgroundColor="@color/teal_200" />

    <TextView
        android:fontFamily="@font/kitab_bold"
        android:id="@+id/tajweed_verse_part"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="12dp"
        tools:text="Ø£" />

    <TextView
        android:textSize="17sp"
        android:fontFamily="@font/kitab_bold"
        android:id="@+id/tajweed_rule_name"
        style="@style/TextAppearance.AppCompat.Body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="16dp"
        tools:text="@string/tajweed_madda_ghunnah" />
</LinearLayout>